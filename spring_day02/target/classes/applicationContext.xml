	<!-- DataSource 객체 설정 -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
		<property name="username" value="bang" />
		<property name="password" value="1234" />
	</bean>
	
	<!-- 2) JdbcTemplate 클래스 <bean> 등록하여 DI ◀ -->
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<!-- 트랜잭션관련설정 -->
	<bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<tx:advice id="txAdvice" transaction-manager="txManager">     <!--트랜잭션 aop설정 -->
		<tx:attributes>
			<tx:method name="select*" read-only="true" />
			<tx:method name="*" />
		</tx:attributes>
	</tx:advice>
	
	<aop:config>
		<aop:pointcut expression="execution(* com.test.app..*Impl.*(..))" id="cPointcut"/>
		
		<aop:advisor advice-ref="txAdvice" pointcut-ref="cPointcut"/>
	</aop:config>
	
	
	
</beans>
